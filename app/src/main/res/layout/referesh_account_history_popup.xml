<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/et_bg_dr">

    <TextView
        android:id="@+id/txt_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/head_refresh_history"
        android:textColor="@android:color/white"
        android:background="@color/red"
        android:gravity="center"
        android:textSize="@dimen/text_size_normal"
        android:textStyle="bold"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/txt_dialog_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_dialog_title"
        android:text="@string/delete_prev_history"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:textSize="@dimen/text_normal"/>

    <Button
        android:id="@+id/btn_yes"
        style="@style/buttonLogInRegisterRedNormal"
        android:layout_toLeftOf="@+id/btn_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_dialog_msg"
        android:layout_marginRight="10dp"
        android:text="@string/yes_do"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_no"
        style="@style/buttonLogInRegisterGrayNormal"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btn_yes"
        android:layout_marginRight="10dp"
        android:text="@string/not_insan"
        android:textAllCaps="false" />

</RelativeLayout>