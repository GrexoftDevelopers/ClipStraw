<?xml version="1.0" encoding="utf-8"?>
<com.clipstraw.gx.clipstraw.pipedprogressbar.PipedProgress xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pipedProgressBlock="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:eventBox="http://schemas.android.com/apk/res-auto"
    android:background="#0000ff">

    <com.clipstraw.gx.clipstraw.pipedprogressbar.PipedProgressBlock
        android:id="@+id/progress_item1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        pipedProgressBlock:block_type="bottom_right">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/angle_bottom_right_orange" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/angle_bottom_right" />
    </com.clipstraw.gx.clipstraw.pipedprogressbar.PipedProgressBlock>

    <com.clipstraw.gx.clipstraw.pipedprogressbar.PipedProgressBlock
        android:id="@+id/progress_item1_2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_item1"
        android:layout_toRightOf="@+id/progress_item1"
        android:layout_marginTop="-23dp"
        pipedProgressBlock:block_type="horizontal_left">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/horizontal_pipe_orange" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/horizontal_pipe_grey_new" />
    </com.clipstraw.gx.clipstraw.pipedprogressbar.PipedProgressBlock>

    <com.clipstraw.gx.clipstraw.pipedprogressbar.PipedProgressBlock
        android:id="@+id/progress_item2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/progress_item1_2"
        android:layout_below="@+id/progress_item1_2"
        android:layout_marginTop="-23dp"
        pipedProgressBlock:block_type="right_bottom">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/angle_right_bottom_orange" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/angle_right_bottom" />
    </com.clipstraw.gx.clipstraw.pipedprogressbar.PipedProgressBlock>

    <com.clipstraw.gx.clipstraw.pipedprogressbar.PipedProgressBlock
        android:id="@+id/progress_item3"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignRight="@+id/progress_item2"
        android:layout_below="@+id/progress_item2"
        pipedProgressBlock:block_type="vertical_down">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@mipmap/vertical_pipe_orange" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@mipmap/vertical_pipe_grey_new" />
    </com.clipstraw.gx.clipstraw.pipedprogressbar.PipedProgressBlock>

    <widgets.EventBox
        android:id="@+id/event_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/progress_item3"
        android:layout_alignTop="@+id/progress_item3"
        eventBox:eventbox_direction="right"
        eventBox:eventbox_color="grey"
        eventBox:eventbox_date="@string/event_date"
        eventBox:eventbox_title="@string/event_title"/>


