<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="100dp"
    xmlns:iconTextView="http://schemas.android.com/apk/res-auto"
    android:background="@color/lightGray">

    <ImageView
        android:id="@+id/img_event_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/fr1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="left|center_vertical"
        android:background="@color/black_half_opaque">

        <widgets.IconTextView
            android:id="@+id/txt_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/like_text"
            android:textSize="12sp"
            iconTextView:icon_mipmap_txt="@mipmap/ic_like_small_white"
            iconTextView:icon_size_txt="15dp"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:textColor="@android:color/white"/>
    </LinearLayout>



</RelativeLayout>