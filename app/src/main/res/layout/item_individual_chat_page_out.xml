<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">


    <RelativeLayout
        android:id="@+id/relative_layout_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@mipmap/msg_out_bg"
        android:padding="10dp"
        android:layout_weight="0.8">


        <TextView
            android:id="@+id/txt_msg_sender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/txt_msg_time"
            android:text="@string/sender"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_normal"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txt_msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"
            android:text="@string/time_ago"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:id="@+id/txt_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_msg_sender"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/txt_msg_time"
            android:text="@string/message"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_normal" />


        <TextView
            android:id="@+id/txt_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txt_msg_time"
            android:layout_marginTop="10dp"
            android:paddingRight="5dp"
            android:text="@string/seen_msg"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_normal" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_gravity="top"
        android:layout_weight="0.2">

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle" />

    </RelativeLayout>

</LinearLayout>