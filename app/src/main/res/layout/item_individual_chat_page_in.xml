<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:id="@+id/relative_layout_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginRight="5dp">

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle" />

        <ImageView
            android:id="@+id/img_ring"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/img_profile"
            android:layout_alignRight="@+id/img_profile"
            android:src="@drawable/image_ring" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@mipmap/msg_in_bg"
        android:padding="10dp">


        <TextView
            android:id="@+id/txt_msg_sender"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/txt_msg_time"
            android:text="@string/name_user"
            android:textColor="@color/red"
            android:textSize="@dimen/text_normal"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"/>


        <TextView
            android:id="@+id/txt_msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="5dp"
            android:text="@string/time_ago"
            android:textColor="#666666"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:id="@+id/txt_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_msg_sender"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="@string/message"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_normal" />


    </RelativeLayout>


</LinearLayout>