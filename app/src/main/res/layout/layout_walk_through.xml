<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/layout_walkthrough_container"
android:layout_width="match_parent"
android:layout_height="match_parent">

<android.support.v4.view.ViewPager
    android:id="@+id/walkthrough_view_pager"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="10dp"
    android:layout_above="@+id/walkthrough_indicator"
    android:orientation="vertical"></android.support.v4.view.ViewPager>

<com.viewpagerindicator.CirclePageIndicator
    android:id="@+id/walkthrough_indicator"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/buttons_set"
    android:layout_marginBottom="10dp"
    android:padding="5dp" />

<RelativeLayout
    android:id="@+id/buttons_set"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="10dp"
    >

    <Button
        android:id="@+id/layout_skip_walkthrough"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_bg_skip_walkthrough"
        android:paddingLeft="20dp"
        android:paddingRight="50dp"
        android:text="@string/walkthrough"
        android:textColor="@android:color/white"
        android:textSize="8pt"
        android:textStyle="bold"
        android:visibility="visible" />


    <Button
        android:id="@+id/layout_lets_go"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_bg_letsgo"
        android:paddingLeft="20dp"
        android:paddingRight="50dp"
        android:text="@string/go"
        android:textColor="@android:color/white"
        android:textSize="8pt"
        android:textStyle="bold"
        android:visibility="invisible" />
</RelativeLayout>





</RelativeLayout>