<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_parent"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/red"
        android:orientation="vertical"
        android:weightSum="1.0">

        <LinearLayout
            android:id="@+id/layout_top_head"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_mid_head"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:weightSum="1.0">

                <ImageView
                    android:id="@+id/img_search_icon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:src="@mipmap/ic_search_small_red" />

            <EditText
                android:id="@+id/et_search_events_users"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="0.55"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/search_user_event"
                android:padding="5dp"
                android:textColor="#666666"
                android:textSize="@dimen/text_normal" />



                <ImageView
                    android:id="@+id/img_voice_search_icon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:padding="5dp"
                    android:gravity="left|center"
                    android:src="@mipmap/ic_voice_search_small_red" />




                <ImageView
                    android:id="@+id/img_drop_down_icon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:gravity="left|center"
                    android:padding="5dp"
                    android:src="@mipmap/ic_actionbar_small_red" />



        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_bottom_head"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="40dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:text="@string/user"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>