<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:IconTextView="http://schemas.android.com/apk/res-auto"
    xmlns:logoView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/chat_item_bg"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/circle" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/avatar"
        android:layout_toRightOf="@+id/img_profile"
        android:padding="5dp"
        android:text="@string/message"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_normal"
        android:textStyle="bold" />

    <widgets.IconTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_user_name"
        android:layout_below="@+id/tv_user_name"
        android:padding="5dp"
        android:text="@string/msg_time"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        IconTextView:icon_mipmap_txt="@mipmap/ic_timer_small_grey"
        IconTextView:icon_size_txt="15dp"/>

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/ic_user_large_red" />

    <widgets.LogoView
        android:layout_width="30dp"
        android:layout_height="27dp"
        android:layout_alignBottom="@+id/avatar"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        logoView:box_size="small"
        logoView:icon_size="10dp"
        logoView:icon_src="@mipmap/ic_like_small_white" />


</RelativeLayout>