<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#cccccc">

    <LinearLayout
        android:id="@+id/layout_notif_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_comment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_blog"/>

        <TextView
            android:id="@+id/txt_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comment"
            android:layout_marginRight="25dp"
            android:textSize="@dimen/text_normal"
            android:textColor="@color/red"/>

        <ImageView
            android:id="@+id/img_like"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/footer_like"/>

        <TextView
            android:id="@+id/txt_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/like"
            android:layout_marginRight="25dp"
            android:textSize="@dimen/text_normal"
            android:textColor="@color/red"/>

        <ImageView
            android:id="@+id/img_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_share"/>

        <TextView
            android:id="@+id/txt_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_post"
            android:textSize="@dimen/text_normal"
            android:textColor="@color/red"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_write_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_popup"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:padding="5dp"
        android:weightSum="1.0">

        <EditText
            android:id="@+id/et_write_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="@string/write_comment"
            android:layout_weight="0.8"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_normal"
            />

        <ImageView
            android:id="@+id/img_upload_file"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/icon_upload_file"
            android:layout_weight="0.1"/>

        <ImageView
            android:id="@+id/img_camera"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_upload_file"
            android:layout_weight="0.1"/>

    </LinearLayout>


</LinearLayout>