<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/chat_item_bg"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/profile_circle"
            android:background="@mipmap/ic_user_small_red"/>

    <LinearLayout
        android:id="@+id/layout_text_container"
        android:layout_width="190dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="10dp">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/name_user"
                android:gravity="bottom"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold"
                android:layout_weight="0.5"/>

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/message"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_normal"
                android:layout_weight="0.5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@mipmap/event_box_highlighted_bg"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:weightSum="1.0">

        <TextView
            android:id="@+id/tv_event_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/event_date"
            android:lines="2"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_normal"
            android:textStyle="bold"
            android:padding="3dp"
            android:layout_weight="0.45"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/tv_event_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/event_title"
            android:padding="3dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_timeline_normal"
            android:layout_weight="0.54"/>



    </LinearLayout>

</LinearLayout>