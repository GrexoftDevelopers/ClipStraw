<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="widget">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="button" parent="widget">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="redButton" parent="button">
        <item name="android:background">@drawable/btn_bg_red</item>
    </style>

    <style name="greyButton" parent="button">
        <item name="android:background">@drawable/btn_bg_gray</item>
    </style>

    <style name="blueButton" parent="button">
        <item name="android:background">@drawable/border_fb_button</item>
    </style>

    <style name="editText" parent="widget">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:background">@mipmap/et_bg_focus</item>
    </style>

    <style name="switches" parent="widget">
        <item name="android:textColor">@color/grayColor</item>
        <item name="android:background">@drawable/et_bg_dr</item>
    </style>

    <style name="spinner" parent="widget">
        <item name="android:background">@drawable/spinner_bg_dr</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:textColor">@color/grayColor</item>
    </style>


    <style name="settings">
        <item name="android:paddingTop">50dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">63dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/border_profile_pages</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="footer">
        <item name="android:background">@color/footer_black</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>