<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PipedProgressBlock">
        <attr name="block_type">
            <enum name="horizontal_right" value="0" />
            <enum name="vertical_up" value="1" />
            <enum name="right_top" value="2" />
            <enum name="right_bottom" value="3" />
            <enum name="top_right" value="4" />
            <enum name="bottom_right" value="5" />
            <enum name="horizontal_left" value="6" />
            <enum name="vertical_down" value="7" />
            <enum name="left_top" value="8" />
            <enum name="left_bottom" value="9" />
            <enum name="top_left" value="10" />
            <enum name="bottom_left" value="11" />
        </attr>
    </declare-styleable>

    <declare-styleable name="IconEditText">
        <attr name="icon_mipmap" format="reference"/>
        <attr name="icon_position" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="IconTextView">
        <attr name="icon_size_txt" format="dimension"/>
        <attr name="icon_mipmap_txt" format="reference"/>
        <attr name="icon_position_txt" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="LogoView">
        <attr name="box_size" format="enum">
            <enum name="small" value="1"/>
            <enum name="large" value="0"/>
        </attr>
        <attr name="icon_size" format="dimension"/>
        <attr name="label_text_size" format="dimension"/>
        <attr name="icon_src" format="reference" />
        <attr name="label" format="string" />
        <attr name="isLabelPresent" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="EventBox">
        <attr name="eventbox_date" format="string"/>
        <attr name="eventbox_title" format="string"/>
        <attr name="eventbox_direction" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
        <attr name="eventbox_color" format="enum">
            <enum name="grey" value="0"/>
            <enum name="red" value="1"/>
        </attr>
    </declare-styleable>

    <style name="styleTextAlt">
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>